<div>
    <h1 class="text-primary">
        <strong>System for welfare associations</strong>
    </h1>
</div>
<div>
    <h4 class="text-primary">24HR Online account access</h4>
</div>
<div>
    <h4 class="text-primary">Dues, investment, benefits and loans</h4>
</div>

<br/><br/><br/>
<div class="row">
    <div class="col-lg-4">

        <div class="panel panel-warning">
            <div class="panel-heading">Request a demo</div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" action="/Home/GetStarted" method="get">
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Enter first name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Enter last name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-warning">Get Started</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6">

        <div class="panel panel-success">
            <div class="panel-heading">Login</div>
            <div class="panel-body">
                
                <form id="loginForm" class="form-horizontal" role="form">
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="domain" placeholder="Enter your association domain" style="display: inline-block">
                            <h4 class="domain" style="display: inline-block">.ikbportal.com</h4>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success">Continue</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <script type="text/javascript">
            $(document)
                .ready(function() {

                    $("#loginForm")
                        .submit(function(evt) {
                            evt.preventDefault();

                            var domain = $("#domain").val();
                            if (domain) {
                                var valid;
                                for (var i = 0; i < window.subdomains.length; i++) {
                                    if (window.subdomains[i] === domain) {

                                        window.location = "http://" + domain + ".ikbportal.com";
                                        return;
                                    } else {
                                        valid = false;
                                    }
                                }
                                if (!valid) {
                                    $("#domain").addClass("error");
                                    alert("Incorrect sub domain");
                                }
                            }
                        });

                });
        </script>
    </div>
    <div class="col-lg-2"></div>
</div>
