@{
    var year = DateTime.Now.Year;
    var lastYear = year - 1;
}
<h3>Investment Analysis</h3>
<div style="display: inline-block">
    <select id="displayYear" class="form-control" style="display: inline-block; float: left; width: 130px; margin-right: 15px;">
        <option selected="selected" value="@year">@year</option>
        <option value="@lastYear">@lastYear</option>
    </select>

    <select id="mType" class="form-control" style="display: inline-block; float: left; width: 175px">
        <option selected="selected" value="Individual">Individual</option>
        <option value="Association">Association</option>
        <option value="CommunityBased">Community Based</option>
    </select>
</div><br/>

<div class="panel panel-success" style="width: 30%; display: inline-block">
    <div class="panel-heading">Total Amount of (<strong><span class="selectedType"></span> membership</strong>) investment in <strong class="selectedYear"></strong></div>
    <div class="panel-body">
        <h4 id="totalAmount">loading...</h4>
    </div>
</div>
<div class="panel panel-info" style="width: 30%; display: inline-block">
    <div class="panel-heading">Total Number of (<strong><span class="selectedType"></span> membership</strong>) members who have investments in <strong class="selectedYear"></strong></div>
    <div class="panel-body">
        <h4 id="usersWith">loading...</h4>
    </div>
</div>
<div class="panel panel-danger" style="width: 30%; display: inline-block">
    <div class="panel-heading">Total Number of (<strong><span class="selectedType"></span> membership</strong>) members with no investments at all, in <strong class="selectedYear"></strong></div>
    <div class="panel-body">
        <h4 id="usersWithout">loading...</h4>
    </div>
</div>
<div class="panel panel-success" style="width: 30%; display: inline-block">
    <div class="panel-heading">The top 10 (<strong><span class="selectedType"></span> membership</strong>) investors in <strong class="selectedYear"></strong></div>
    <div class="panel-body">
        <div id="topMTypeTen">loading...</div>
    </div>
</div>
<div class="panel panel-info" style="width: 30%; display: inline-block">
    <div class="panel-heading"><strong>THE TOP 10 OVERALL INVESTORS (ALL MEMBERSHIP TYPE)</strong></div>
    <div class="panel-body">
        <div id="topTen">loading...</div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#displayYear, #mType').on("change", function () {
            var year = $('#displayYear').val();
            var mType = $('#mType').val();

            $('.selectedType').text($('#mType option:selected').text());
            $('.selectedYear').text($('#displayYear option:selected').text());

            wams.accounting.showInvestmentData(year, mType);
        });

        $('.selectedType').text($('#mType option:selected').text());
        $('.selectedYear').text($('#displayYear option:selected').text());
        wams.accounting.showInvestmentData($('#displayYear').val(), $('#mType').val());
    });
</script>