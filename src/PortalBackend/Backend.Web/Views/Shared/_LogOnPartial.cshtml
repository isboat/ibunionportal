@if (Request.IsAuthenticated)
{
    if (User.UserLoginRole > 1)
    {
        <li>@Html.ActionLink("Admin Panel", "Index", "Admin")</li>
        <li>@Html.ActionLink("Log Off", "LogOff", "Auth")</li>
    }
    else
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" type="button" data-toggle="dropdown">Report<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Dues statement", "ViewMemberDues", "Account")</li>
                <li>@Html.ActionLink("Outstanding dues", "ViewMemberOutstanding", "Account")</li>
                @if (User.CanInvest)
                {
                    <li>@Html.ActionLink("Investment statement", "ViewMemberInvestments", "Account")</li>
                }
                @if (User.CanDoChildBenefit)
                {
                    <li>@Html.ActionLink("Child support statement", "ViewMemberSupport", "Account")</li>
                }

            </ul>
        </li>

        <li class="dropdown">
            <a href="#" class="dropdown-toggle" type="button" data-toggle="dropdown">Benefits<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Child Birth", "BenefitRequest", "Account")</li>
                <li>@Html.ActionLink("Funeral Assistance", "BenefitRequest", "Account")</li>
                <li>@Html.ActionLink("Maternity Allowance", "BenefitRequest", "Account")</li>
                <li>@Html.ActionLink("Family Support", "BenefitRequest", "Account")</li>
                <li>@Html.ActionLink("Disaster Relief Support", "BenefitRequest", "Account")</li>
                <li>@Html.ActionLink("Bereavement Allowance", "BenefitRequest", "Account")</li>
                <li>@Html.ActionLink("Medical Assistance", "BenefitRequest", "Account")</li>
            </ul>
        </li>
    
        <li class="divider"></li>
        <li>@Html.ActionLink("Log Off", "LogOff", "Auth")</li>
    }
}
